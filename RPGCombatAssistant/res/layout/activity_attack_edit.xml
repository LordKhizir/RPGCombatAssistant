<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/attackEdit_nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:text="@string/attackEdit_name" />

    <EditText
        android:id="@+id/attackEdit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignBaseline="@+id/attackEdit_nameLabel"
        android:layout_alignBottom="@+id/attackEdit_nameLabel"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/attackEdit_nameLabel"
        android:ems="10"
        android:inputType="textPersonName|textNoSuggestions" />

    <TextView
        android:id="@+id/attackEdit_attackTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attackEdit_nameLabel"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/attackEdit_name"
        android:text="@string/attackEdit_attackType" />

    <Spinner
        android:id="@+id/attackEdit_attackType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_alignBaseline="@+id/attackEdit_attackTypeLabel"
        android:layout_alignBottom="@+id/attackEdit_attackTypeLabel"
        android:layout_alignLeft="@+id/attackEdit_name"
        android:ems="8"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/attackEdit_attackTypeLabel"
    />

    
    <Button
        android:id="@+id/attackEdit_cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/attackEdit_nameLabel"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="165dp"
        android:text="@string/attackEdit_cancelButton" />

    <Button
        android:id="@+id/attackEdit_saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/attackEdit_cancelButton"
        android:layout_alignBottom="@+id/attackEdit_cancelButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:text="@string/attackEdit_saveButton" />
    
</RelativeLayout>
