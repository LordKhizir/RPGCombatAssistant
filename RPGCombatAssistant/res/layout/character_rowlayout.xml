<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/characterList_avatar"
        style="@style/characterList_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/characterList_name"
            style="@style/characterList_name" />

        <TextView
            android:id="@+id/characterList_playerName"
            style="@style/characterList_playerName" />
    </LinearLayout>

    <TextView
        android:id="@+id/characterList_hitPoints"
        style="@style/characterList_hitPoints" />

</LinearLayout>