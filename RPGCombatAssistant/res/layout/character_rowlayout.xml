<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ImageView
        style="@style/characterList_avatar"
        android:id="@+id/characterList_avatar"
	/>

    <TextView
        style="@style/characterList_name"
        android:layout_toRightOf="@+id/characterList_avatar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/characterList_name"
    />
	<TextView
        style="@style/characterList_playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterList_name"
        android:layout_toRightOf="@+id/characterList_avatar"
        android:id="@+id/characterList_playerName"
    />
</RelativeLayout> 