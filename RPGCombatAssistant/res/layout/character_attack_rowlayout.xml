<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ImageView
        style="@style/character_attackImage"
        android:id="@+id/character_attack_icon"
	/>
    <TextView
        style="@style/character_attackName"
        android:layout_toRightOf="@+id/character_attack_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/character_attack_name"
    />
	<TextView
        style="@style/character_attackInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/character_attack_icon"
        android:layout_below="@+id/character_attack_name"
        android:id="@+id/character_attack_info"
    />
</RelativeLayout>