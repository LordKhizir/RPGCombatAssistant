<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp" >

    <ImageView
        android:id="@+id/character_attack_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
	/>
    <TextView
        style="@style/character_attackName"
        android:layout_toRightOf="@+id/character_attack_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/character_attack_name"
        android:text="@string/attack_name"
    />
	<TextView
        style="@style/character_attackInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/character_attack_icon"
        android:layout_below="@+id/character_attack_name"
        android:id="@+id/character_attack_info"
        android:text="@string/attack_name"
    />
    <TextView
        style="@style/character_attackSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:id="@+id/character_attack_system"
        android:text="@string/system"
        />
</RelativeLayout>