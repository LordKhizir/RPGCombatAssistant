<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
    <!-- MAIN LIST ACTIVITY -->
    <style name="gameList_sectionHeader" parent="android:Theme.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#116611</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">22dp</item>
        <item name="android:paddingLeft">22dp</item>
    </style>
    <style name="gameList_partnerAvatar" parent="android:Theme.Light">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">4px</item>
        <item name="android:layout_marginRight">4px</item>
        <item name="android:layout_marginTop">4px</item>
        <item name="android:background">#111111</item>
    </style>
    <style name="gameList_partnerName" parent="android:Theme.Light">
        <item name="android:textColor">#222222</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!-- END OF MAIN LIST ACTIVITY -->
    
    
    <!-- GAME TURN -->
    <style name="turnQuestion" parent="android:Theme.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#224422</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">22dp</item>
    </style>
        <style name="turnAnswer" parent="android:Theme.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#224422</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">22dp</item>
    </style>
    <!-- END OF GAME TURN -->
</resources>